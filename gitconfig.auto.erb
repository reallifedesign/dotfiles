[user]
	name = <%= `whoami`.chomp + "@" + `hostname -a`.chomp %>
	email = <%= `whoami`.chomp + "@" + `hostname -a`.chomp %>
[alias]
	co = checkout
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = nano
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
